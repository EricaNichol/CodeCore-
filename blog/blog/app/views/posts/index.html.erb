<div class='container'>
  <article class="post_show">
    <h2>My Posts</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post %></td>
            <td><%= link_to post.body, post %></td>
            <td><%= formatted_date(post.created_at) %></td>
            <td><%= formatted_date(post.updated_at) %></td>
              <% end %>
          </tr>
        </tbody>
      </table>
  </article>
</div>
