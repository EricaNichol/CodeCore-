<div class="container">
  <%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
  </div>
  <div class="form-group">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-primary btn-xs"  %>
    <% end %>
  </div>
</div>
