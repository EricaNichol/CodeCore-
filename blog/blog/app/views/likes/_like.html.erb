<div id="like">
  <% if user_signed_in? %>
    <% if current_user.liked_post?(@post) %>
      <%= link_to fa_icon("thumbs-up"),
                              post_like_path(@post, @post.like_for(current_user)),
                              class: "big-icon",
                              title:"Un-Like",
                              method: :delete,
                              remote: true %>
  <% else %>
    <%= link_to fa_icon("thumbs-o-up"),
                              post_likes_path(@post),
                              class: "big-icon",
                              method: :post,
                              remote: true %>
    <% end %>
  <% end %>
  (<%= @post.likes.count %>)
</div>
