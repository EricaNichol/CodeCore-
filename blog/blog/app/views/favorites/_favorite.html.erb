<div id="favorite">
  <% if user_signed_in? %> <%#= if signed in, then  %>
    <% if current_user.favorited_post?(@post) %> <%#= if liked %>
      <%= link_to fa_icon("heart"),
                          post_favorite_path(@post, @post.favorite_for(current_user)),   class: "big-icon",
                          title:"Un-Fav",
                          method: :delete,
                          remote: true  %>
    <% else %>
      <%= link_to fa_icon('heart-o'),
                          post_favorites_path(@post),
                          class: "big-icon",
                          method: :post,
                          remote: true %>
    <% end %>
  <% end %>
  (<%= @post.favorites.count %>)
</div>
