<div class="container">
  <h2>Sign Up</h2>
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <% if @user.persisted? %>
        <%= f.input :current_passwrod %>
      <% end %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <div class="form-group">
      <%= f.submit class:"btn btn-primary btn-xs" %>
    </div>
<% end %>
</div>
